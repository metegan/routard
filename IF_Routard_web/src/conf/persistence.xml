<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="IF-RoutardPU" transaction-type="JTA">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <jta-data-source>if-r</jta-data-source>
    <class>metier.modele.Circuit</class>
    <class>metier.modele.Client</class>
    <class>metier.modele.Conseiller</class>
    <class>metier.modele.Devis</class>
    <class>metier.modele.Pays</class>
    <class>metier.modele.Sejour</class>
    <class>metier.modele.Vol</class>
    <class>metier.modele.Voyage</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="eclipselink.ddl-generation" value="drop-and-create-tables"/>
    </properties>
  </persistence-unit>
</persistence>
